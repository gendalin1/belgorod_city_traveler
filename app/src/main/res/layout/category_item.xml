<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <ImageView
        android:id = "@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id ="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textSize"

        />
    <TextView
        android:id = "@+id/cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/paging"
        android:layout_marginEnd="@dimen/paging"
        android:textColor="@color/midnight_blue"
        android:textSize="@dimen/titleSize"
        android:text = "@string/cashback" />

    <TextView
        android:id = "@+id/discount"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:layout_below="@+id/cashback"
        android:background="@drawable/buy_buttom_style"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/paging"
        android:gravity="center"
        />
</RelativeLayout>