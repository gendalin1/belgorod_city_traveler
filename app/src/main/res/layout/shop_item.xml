<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shop_item_style">

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/paging"
        android:layout_marginEnd="@dimen/paging"
        android:layout_marginTop="@dimen/paging"
        android:layout_height="100dp"
        android:id = "@+id/image" />

    <TextView
        android:id ="@+id/description"
        android:layout_width="match_parent"
        android:textColor="@color/midnight_blue"
        android:textSize="@dimen/textSize"
        android:gravity="center"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point"
            android:textSize="@dimen/titleSize" />
        <TextView
            android:id = "@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titleSize"
            android:layout_toLeftOf="@+id/point"
            android:layout_alignTop = "@+id/point"
            android:layout_marginEnd="@dimen/paging"/>

    </RelativeLayout>


    <Button
        android:id = "@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paging"
        android:theme = "@style/button.Blue"
        android:text="@string/buy"
        android:background="@drawable/buy_buttom_style"
        android:layout_gravity="center"/>



</LinearLayout>